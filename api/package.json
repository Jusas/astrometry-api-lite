{
  "name": "astrometry.net-api-lite",
  "version": "1.0.0",
  "description": "A lite API-only version of astrometry.net, to provide solver functionality via an identical API",
  "scripts": {
    "build": "npm run clean-dist && npm run tsoa && npm run tsc && npm run cp-swagger-ui",
    "dev": "npm run build && concurrently -k -p \"[{name}]\" -n \"TS,Node,TSOA\" -c \"yellow.bold,green.bold,cyan.bold\" \"npm run watch-ts\" \"npm run watch-node\" \"npm run watch-controllers-models\"",
    "serve-dist": "node dist/server.js",
    "tsoa-routes": "tsoa routes",
    "tsoa-swagger": "tsoa swagger",
    "tsoa": "npm run tsoa-routes && npm run tsoa-swagger",
    "watch-ts": "tsc --watch",
    "tsc": "tsc",
    "watch-node": "nodemon dist/server.js",
    "watch-controllers-models": "onchange \"./src/controllers/**/*.ts\" \"./src/models/**/*.ts\" -- npm run tsoa",
    "cp-swagger-ui": "ncp ./src/swagger-ui ./dist/swagger-ui",
    "clean-dist": "rimraf ./dist",
    "xxtest": "mocha --require ts:ts-node/register \"src/**/*.ts\"",
    "test": "mocha --compilers ts:ts-node/register \"src/**/*.ts\""
  },
  "dependencies": {
    "async": "^2.6.0",
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.18.2",
    "compression": "^1.7.1",
    "express": "^4.16.2",
    "morgan": "1.9.0",
    "request": "^2.83.0",
    "tsoa": "^2.1.1",
    "multer": "1.3.0",
    "sqlite3": "3.1.13",
    "sqlite": "2.9.1",
    "node-datetime": "2.0.6",
    "valid-url": "1.0.9"
  },
  "devDependencies": {
    "@types/async": "^2.0.47",
    "@types/express": "^4.11.0",
    "@types/mocha": "2.2.48",
    "@types/morgan": "1.7.35",
    "@types/request": "^2.47.0",
    "@types/multer": "1.3.6",
    "@types/sqlite3": "3.1.1",
    "@types/valid-url": "1.0.2",
    "concurrently": "^3.5.1",
    "mocha": "5.0.1",
    "ncp": "2.0.0",
    "nodemon": "^1.14.11",
    "onchange": "3.3.0",
    "rimraf": "2.6.2",
    "ts-node": "^5.0.0",
    "tslint": "^5.9.1",
    "typescript": "^2.7.1"
  }
}
