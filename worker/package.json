{
  "name": "astrometry.net-api-lite-worker",
  "version": "1.0.0",
  "description": "A worker companion of the astrometry.net-api-lite API, which does the processing.",
  "scripts": {
    "worker-build": "npm run worker-clean-dist && npm run worker-tsc && npm run copy-config",
    "worker-dev": "npm run worker-watch-ts",
    "worker-run": "node ./dist/worker/main.js",
    "worker-watch-ts": "tsc -p ./tsconfig-worker.json --watch",
    "worker-tsc": "tsc -p ./tsconfig-worker.json",
    "worker-clean-dist": "rimraf ./dist/worker",
    "mgr-build": "npm run mgr-clean-dist && npm run mgr-tsc && npm run copy-config",
    "mgr-dev": "npm run mgr-watch-ts",
    "mgr-run": "node ./dist/manager/main.js",
    "mgr-watch-ts": "tsc -p ./tsconfig-manager.json --watch",
    "mgr-tsc": "tsc -p ./tsconfig-manager.json",
    "mgr-clean-dist": "rimraf ./dist/manager",
    "copy-config": "copyfiles -f \"./src/config-*.json\" \"./dist\"",
    "test": "mocha --compilers ts:ts-node/register \"src/**/*.ts\""
  },
  "dependencies": {
    "async": "^2.6.0",
    "await-spawn": "^2.0.0",
    "bcrypt-nodejs": "^0.0.3",
    "command-line-args": "5.0.2",
    "shelljs": "0.8.1",
    "node-datetime": "2.0.6",
    "sqlite": "2.9.1",
    "sqlite3": "3.1.13"
  },
  "devDependencies": {
    "@types/node": "9.4.6",
    "@types/async": "^2.0.47",
    "@types/sqlite3": "3.1.1",
    "@types/command-line-args": "4.0.2",
    "@types/shelljs": "0.7.8",
    "concurrently": "^3.5.1",
    "ncp": "2.0.0",
    "copyfiles": "1.2.0",
    "mocha": "5.0.1",
    "nodemon": "^1.14.11",
    "rimraf": "2.6.2",
    "ts-node": "^5.0.0",
    "tslint": "^5.9.1",
    "typescript": "^2.7.1"
  }
}
